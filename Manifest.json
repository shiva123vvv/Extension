{
  "manifest_version": 3,
  "name": "Cognitive Load Monitor",
  "version": "2.0",
  "description": "AI-powered team stress & productivity analysis for Zoho Cliq",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "alarms"
  ],
  
  "host_permissions": [
    "https://*.zoho.com/*",
    "https://*.zohoclip.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cognitive Load Monitor"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.zoho.com/cliq/*",
        "https://*.zohoclip.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://*.zoho.com/*"]
    }
  ]
}