{
  "manifest_version": 3,
  "name": "Team Cognitive Load Monitor",
  "version": "1.0",
  "description": "AI-powered team stress and productivity monitoring tool",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://cliq.zoho.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://cliq.zoho.com/*"],
      "js": ["content.js"]
    }
  ]
}
