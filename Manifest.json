{
  "manifest_version": 3,
  "name": "Team Cognitive Load Monitor",
  "version": "1.0",
  "description": "AI-powered team stress and productivity monitoring",
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cognitive Load Monitor"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://cliq.zoho.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://cliq.zoho.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [{
    "resources": ["privacy.html", "terms.html"],
    "matches": ["https://cliq.zoho.com/*"]
  }]
}