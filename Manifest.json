{
  "manifest_version": 3,
  "name": "Team Cognitive Load Monitor - Zoho Cliq",
  "version": "1.0",
  "description": "AI-powered team stress, overload, and productivity monitoring",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://cliq.zoho.com/*",
    "https://*.zoho.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://cliq.zoho.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cognitive Load Monitor"
  }
}